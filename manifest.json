{
  "manifest_version": 2,
  "name": "Pop-up History",
  "version": "0.1.0",
  "description": "Pop-up a History",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Pop-up a history",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "app_icon_128.png",
    "16": "app_icon_16.png",
    "32": "app_icon_32.png",
    "48": "app_icon_48.png"
  },
  "permissions": [
    "history",
    "tabs",
    "chrome://favicon/"
  ],
  "options_page": "options.html"
}
