{
  "manifest_version": 3,
  "name": "Pop-up History",
  "version": "0.3.4",
  "description": "Pop-up a History",
  "action": {
    "default_icon": "icon.png",
    "default_title": "Pop-up a history",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "app_icon_128.png",
    "16": "app_icon_16.png",
    "32": "app_icon_32.png",
    "48": "app_icon_48.png"
  },
  "permissions": [
    "history",
    "favicon"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
